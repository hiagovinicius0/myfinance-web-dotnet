@model myfinance_web_dotnet_domain.Models.TransactionModel

@{
	ViewData["Title"] = "Registrar Transação";
}

<h1>@ViewData["Title"]</h1>

<div>
	<form asp-controller="Transaction" asp-action="Create" method="post">
		<input type="hidden" asp-for="Id" />
		<div class="form-group">
			<label>Data:</label><br>
			<input type="date" asp-for="Date" class="form-control">
		</div>
		<div class="form-group">
			<label>Valor:</label><br>
			<input type="text" asp-for="Value" class="form-control" step="0.01">
		</div>
		<div class="form-group">
			<label>Plano de Conta:</label><br>
			@Html.DropDownListFor(m => m.PlanAccountId, Model.ListPlanAccount, new {@class="form-select"})
		</div>
		<div class="form-group">
			<label>Histórico:</label><br>
			<input type="text" asp-for="History" class="form-control">
		</div><br>
		<button type="submit" class="btn btn-block btn-success">Registar</button>
	</form>
</div>