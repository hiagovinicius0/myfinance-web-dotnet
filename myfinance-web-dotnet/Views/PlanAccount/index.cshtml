@{
	ViewData["Title"] = "Plano de Contas";
}
<h1>@ViewData["Title"]</h1>

<button type="button" class="btn btn-block btn-primary" onclick="Novo()">Criar item de Plano de Conta</button>
<br><br>
<table class="table table-bordered">
	<tr>
		<th>Id</th>
		<th>Descrição</th>
		<th>Tipo</th>
		<th>#</th>
		<th>#</th>
	</tr>
	@{
			foreach(var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Description</td>
					<td>@item.Type</td>
					<td><button type="button" class="btn btn-block btn-outline-warning" onclick="Atualizar(@item.Id.ToString())">Editar</button></td>
					<td><button type="button" class="btn btn-block btn-outline-danger" onclick="Excluir(@item.Id.ToString())">Excluir</button></td>
				</tr>
			}
	}
</table>
<script>
	function Novo(){
		window.location.href = '../PlanAccount/Cadastrar';
	}

	function Atualizar(id){
		window.location.href = '../PlanAccount/Cadastrar/'+ id;
	}

	function Excluir(id){
		window.location.href = '../PlanAccount/Excluir/'+ id;
	}
</script>